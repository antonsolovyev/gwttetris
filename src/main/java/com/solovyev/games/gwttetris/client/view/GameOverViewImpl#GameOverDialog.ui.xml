<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        #buttonDiv
        {
            text-align: center;
        }
        
        #headerDiv
        {
            padding: 20px;
            text-align: center;
        }
        
        #headerSpan
        {
            font-size: x-large;
        }
        
        #mainDiv
        {
        }
    </ui:style>
    
    <g:DialogBox modal="true">
        <g:HTMLPanel>
            <div id="mainDiv">
                <div id="headerDiv">
                    <span id="headerSpan">Game is over!</span>
                </div>
                <hr/>
                <div id="buttonDiv">
                    <g:Button ui:field='okButton' focus="true">OK</g:Button>
                </div>
            </div>
        </g:HTMLPanel>
    </g:DialogBox>

</ui:UiBinder>